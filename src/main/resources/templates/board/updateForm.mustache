{{> layout/header}}

<style>
    /* 헤더, 푸터 스타일 시작 */
    .header {
        height: 70px;
        border-bottom: 1px solid #ccc;
        margin-top: 10px;
    }

    .logo {
        color: #9F12E1;
        font-weight: 700;
    }

    .footer {
        border-bottom: 1px solid #ccc;
        margin-bottom: 20px;
    }

    /* 타이틀 스타일 */
    .title-text {
        font-size: 20px;
    }

    /* 메인 스타일 */
    .main-text {
        font-size: 14px;
    }

    /* 서브 스타일 */
    .sub-text {
        font-size: 13px;
    }

    .footer-inc {
        font-size: 12px;
    }

    .btn-style {
        margin-top: 15px;
        border-radius: 30px;
        width: 100px;
        height: 40px;
    }

    .btn-login {
        border: 1px solid #9F12E1;
        color: #9F12E1;
        margin-right: 10px;
    }

    .btn-login a {
        margin-bottom: 5px;
        font-size: 15px;
        color: #9F12E1;
        margin-bottom: 5px;
        text-decoration: none;
    }

    .btn-register {
        background-color: #9F12E1;
        color: white;
    }

    .btn-register a {
        margin-bottom: 5px;
        font-size: 15px;
        color: #ffffff;
        margin-bottom: 5px;
        text-decoration: none;
    }

    .btn-logout {
        margin-left: 10px;
        margin-right: 10px;
        width: 280px;
        background-color: #9F12E1;
        color: white;
    }

    .header-menu {
        font-weight: 600;
    }

    .dropdown-menu {
        width: 300px;
    }

    .dropdown-menu-big {
        font-size: 15px;
    }

    .dropdown-menu-small {
        font-size: 11px;
    }

    .dropdown-toggle::after {
        display: none;
    }

    .nav-img {
        width: 20px;
        height: 20px;
        margin-top: 20px;
        margin-right: 20px;
    }

    /* 헤더, 푸터 스타일 끝 */

    /* updateBoard.html */
    .body {
        margin-top: 15px;
    }

    .body-content {
        border: 1px solid #EDEEF2;
        border-radius: 15px;
    }

    .body-content-title {
        margin-left: 20px;
        margin-top: 15px;
    }


    .box-layout {
        margin-bottom: 15px;
        padding: 15px;
    }

    .bottom-box {
        display: flex;
        border-top: 1px solid #ccc;
        margin-top: 10px;
        margin-bottom: 10px;
    }

    /* 제목 입력칸의 스타일 */
    input[type="text"] {
        display: flex;
        flex-direction: row;
        padding: 10px;
        border-radius: 10px;
        border: 1px solid #EDEEF2;

    }

    /* 내용 입력칸의 스타일 */
    textarea {
        height: 300px;
        /* 높이 설정 */
        display: flex;
        flex-direction: row;
        border-radius: 10px;
        border: 1px solid #EDEEF2;
        margin-bottom: 10px;

    }

    .container {
        display: grid;
        grid-gap: 10px;
        width: 600px;
    }

    h1 {
        font-weight: bold;
        /* 글자 굵기 설정 */
    }

    .custom-textarea {
        padding: 10px;
        border: 1px solid #EDEEF2;
        border-radius: 1-px;
        font-size: 13px;
        line-height: 1.5;
        width: 100%;
        box-sizing: border-box;
        color: #828294;
    }

    /* updateBoard.html */
</style>

<div class="container">

    <h1 class="title-text body">게시글 수정</h1>
    <div class="body-content">

        <div class="body-content-title">
            <p>Create Posts</p>
        </div>

        <div class="box-layout">

            <form action="/board/{{board.id}}/update" method="post">

                <div class="mb-3 d-flex flex-column">
                    <label for="password" class="form-label main-text">제목</label>
                    <input type="text" class="form-control input-style sub-text" id="username" name="title"
                        value="{{board.title}}">
                </div>

                <div class="mb-3 d-flex flex-column">
                    <label for="password" class="form-label main-text">내용</label>
                    <textarea class="custom-textarea" rows="20" cols="30" id="content" name="content">{{board.content}}</textarea>
                </div>

                <div class="bottom-box justify-content-end">
                    <button type="submit" class="btn btn-style btn-register main-text edit-btn" style="margin-right: 15px;">수정</button>
                </div>
            </form>

            <form action="/board/{{board.id}}/delete" method="post">
                <div class="bottom-box justify-content-end">
                    <button type="submit" class="btn btn-style btn-register main-text edit-btn" style="margin-right: 15px;">삭제</button>
                </div>
            </form>

        </div>
    </div>

</div>

<script>
    $(document).ready(function () {
        $('#content').summernote({
            height: 200
        });
    });
</script>

{{> layout/footer}}