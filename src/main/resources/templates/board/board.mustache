<script>
    function isWhitespace(str) {
        return str.trim() === '';
    }

    function valid() {
        let keyword = document.querySelector("#keyword").value;
        console.log(keyword);
        if (isWhitespace(keyword)) {
            alert('공백을 입력할 수 없습니다');
            return false;
        }
    }
    const tdElements = document.querySelectorAll('td.board-number'); // 클래스가 'board-number'인 모든 <td> 요소 선택
    const totalElements = tdElements.length;

    tdElements.forEach((td, index) => {
        const id = document.createElement('span');
        id.textContent = `${totalElements - index}`; // 역순으로 아이디 생성
        td.appendChild(id); // <td> 내에 아이디 추가
    });
</script>

