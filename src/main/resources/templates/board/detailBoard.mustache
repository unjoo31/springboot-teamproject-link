/* detailBoard.html */
.body {
    margin-top: 15px;
}

.body-content {
    border: 1px solid #EDEEF2;
    border-radius: 15px;
}

.body-content-title {
    margin-left: 20px;
    margin-top: 15px;
}


.box-layout {
    margin-bottom: 15px;
    padding: 15px;
}

.bottom-box {
    border-top: 1px solid #ccc;
    margin-top: 10px;
    margin-bottom: 10px;
}

/* 제목 입력칸의 스타일 */
input[type="text"] {
    height: 200px;
    display: flex;
    flex-direction: row;
    padding: 10px;
    border-radius: 10px;
    border: 1px solid #EDEEF2;

}

.container {
    display: grid;
    grid-gap: 10px;
    width: 600px;
}

h1 {
    font-weight: bold;
    /* 글자 굵기 설정 */
}
.custom-textarea{
    padding: 10px;
    border: 1px solid #EDEEF2;
    border-radius: 1-px;
    font-size: 13px;
    line-height: 1.5;
    width: 100%;
    height: 200px;
    box-sizing: border-box;
    color: #828294;
    border-radius: 10px;
}   
.title-mini-text{
    font-size: 16px;
}
.reply-writer{
    font-size: 14px;
}
.reply-button{
    margin-left: 20px;
    width: 70px;
}
