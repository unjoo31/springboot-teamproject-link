{{> layout/header}}

<style>
    .body {
    margin-top: 15px;
    }

    .body-content {
        border: 1px solid #EDEEF2;
        border-radius: 15px;
    }

    .body-content-title {
        margin-left: 20px;
        margin-top: 15px;
    }


    .box-layout {
        margin-bottom: 15px;
        padding: 15px;
    }

    .bottom-box {
        border-top: 1px solid #ccc;
        margin-top: 10px;
        margin-bottom: 10px;
    }

    /* 제목 입력칸의 스타일 */
    input[type="text"] {
        height: 200px;
        display: flex;
        flex-direction: row;
        padding: 10px;
        border-radius: 10px;
        border: 1px solid #EDEEF2;

    }

    .container {
        display: grid;
        grid-gap: 10px;
        width: 600px;
    }

    h1 {
        font-weight: bold;
        /* 글자 굵기 설정 */
    }
    .custom-textarea{
        padding: 10px;
        border: 1px solid #EDEEF2;
        border-radius: 1-px;
        font-size: 13px;
        line-height: 1.5;
        width: 100%;
        height: 200px;
        box-sizing: border-box;
        color: #828294;
        border-radius: 10px;
    }   
    .title-mini-text{
        font-size: 16px;
    }
    .reply-writer{
        font-size: 14px;
    }
    .reply-button{
        margin-left: 20px;
        width: 70px;
    }
</style>

<div class="container">

    <h1 class="title-text body">지원현황이 사라졌어요</h1>
    <div class="body-content">

        <div class="box-layout">
            <form class="left-box" action="#" enctype="multipart/form-data">
                <div class="mb-3 d-flex flex-column">
                    <p>unjoo31</p>
                    <div class="custom-textarea">
                        지원현황이 사라졌어요
                    </div>
                </div>
            </form>
        </div>


        <div class="d-flex bottom-box justify-content-center">

            <div class="w-100 px-3">

                <h1 class="title-mini-text body">댓글</h1>

                <!-- 댓글등록 -->
                <div>
                    <form action="/#" method="post">
                        <input type="hidden" name="boardId" value="{{dtos.0.boardId}}">

                        <div class="reply-writer">작성자</div>
                        <div class="d-flex align-items-center mb-3"> <!-- 세로 중앙 정렬 및 마진 추가 -->
                            <div class="d-flex flex-grow-1"> <!-- 좌우로 확장 -->
                                <input class="form-control sub-text" placeholder="댓글을 입력하세요">
                            </div>

                            <button class="btn btn-style btn-register main-text bottom-box reply-button" type="
                                button">완료</button>
                        </div>
                    </form>
                </div>





                <!-- 댓글목록 -->
                <div class="list-group-item">

                    <div>
                        <div class="reply-writer">작성자</div>
                        <div class="d-flex align-items-center ">
                            <div class="d-flex flex-grow-1">
                                <div class="form-control sub-text">댓글 내용 들어오는 곳 입니다</div>
                            </div>

                            <form action="/reply/{{replyId}}/delete" method="post">
                                <input type="hidden" name="boardId" value="{{boardId}}" />
                                <button class="btn btn-style btn-register main-text bottom-box reply-button" type="
                                    button">삭제</button>
                            </form>
                        </div>
                    </div>

                    <div>
                        <div class="reply-writer">작성자</div>
                        <div class="d-flex align-items-center ">
                            <div class="d-flex flex-grow-1">
                                <div class="form-control sub-text">댓글 내용 들어오는 곳 입니다</div>
                            </div>

                            <form action="/reply/{{replyId}}/delete" method="post">
                                <input type="hidden" name="boardId" value="{{boardId}}" />
                                <button class="btn btn-style btn-register main-text bottom-box reply-button" type="
                                    button">삭제</button>
                            </form>
                        </div>
                    </div>

                    <div>
                        <div class="reply-writer">작성자</div>
                        <div class="d-flex align-items-center ">
                            <div class="d-flex flex-grow-1">
                                <div class="form-control sub-text">댓글 내용 들어오는 곳 입니다</div>
                            </div>

                            <form action="/reply/{{replyId}}/delete" method="post">
                                <input type="hidden" name="boardId" value="{{boardId}}" />
                                <button class="btn btn-style btn-register main-text bottom-box reply-button" type="
                                    button">삭제</button>
                            </form>
                        </div>
                    </div>

                </div>
            </div>
        </div>

    </div>

</div>
</div>

