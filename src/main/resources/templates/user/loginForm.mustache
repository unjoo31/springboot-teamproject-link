{{> layout/header}}

<style>
    .register-box{
    width: 400px;
    }
    .register-title{
        font-size: 20px;
    }
    /* 선택된 라디오 버튼의 스타일을 변경 */
    .custom-radio input[type="radio"]:checked {
        background-color: #9F12E1;
        border-color: #9F12E1;
    }
</style>

<div>
    <div class="container p-5 d-flex justify-content-center">
        <div class="register-box">
            <div class="card-header register-title mb-4"><b>로그인</b></div>
            <div class="card-body">
                <form action="#" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="password" class="form-label main-text">아이디</label>
                        <input type="text" id="username" class="form-control sub-text" placeholder="link" name="username">
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label main-text">비밀번호</label>
                        <input type="password" class="form-control sub-text" placeholder="**********" name="password" >
                    </div>
                    <button id="btnJoin" type="submit" class="btn form-control btn-register main-text">NEXT</button>
                </form>
            </div>
        </div>
    </div>
</div>

