{{> layout/header}}

<style>
    /* 헤더, 푸터 스타일 시작 */
.header{
    height: 70px;
    border-bottom: 1px solid #ccc;
    margin-top: 10px;
}
.logo{
    color: #9F12E1;
    font-weight: 700;
}
.footer{
    border-bottom: 1px solid #ccc;
    margin-bottom: 20px;
}
/* 타이틀 스타일 */
.title-text{
    font-size: 20px;
}
/* 메인 스타일 */
.main-text{
    font-size: 14px;
}
/* 서브 스타일 */
.sub-text{
    font-size: 13px;
}
.footer-inc{
    font-size: 12px;
}
.btn-style{
    margin-top: 15px;
    border-radius: 30px;
    width: 100px;
    height: 40px;
}
.btn-login{
    border: 1px solid #9F12E1;
    color: #9F12E1;
    margin-right: 10px;
}
.btn-login a{
    margin-bottom: 5px;
    font-size: 15px;
    color: #9F12E1;
    margin-bottom: 5px;
    text-decoration: none;
}
.btn-register{
    background-color: #9F12E1;
    color: white;
}
.btn-register a{
    margin-bottom: 5px;
    font-size: 15px;
    color: #ffffff;
    margin-bottom: 5px;
    text-decoration: none;
}
.btn-logout{
    margin-left: 10px;
    margin-right: 10px;
    width: 280px;
    background-color: #9F12E1;
    color: white;
}
.header-menu{
    font-weight: 600;
}
.dropdown-menu{
    width: 300px;
}
.dropdown-menu-big{
    font-size: 15px;
}
.dropdown-menu-small{
    font-size: 11px;
}
.dropdown-toggle::after {
    display: none;
}
.nav-img{
    width: 20px;
    height: 20px;
    margin-top: 20px;
    margin-right: 20px;
}
/* 헤더, 푸터 스타일 끝 */

/* register.html */
.register-box{
    width: 400px;
}
.register-title{
    font-size: 20px;
}
/* 선택된 라디오 버튼의 스타일을 변경 */
.custom-radio input[type="radio"]:checked {
    background-color: #9F12E1;
    border-color: #9F12E1;
}
/* register.html */
</style>

<div>
    <div class="container p-5 d-flex justify-content-center">
        <div class="register-box">
            <div class="card-header register-title mb-4"><b>회원가입</b></div>
            <div class="card-body">
                <form action="/join" method="post" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label class="me-5 custom-radio main-text">
                            <input type="radio" name="membership" value="company"> 기업회원
                        </label>
                        <label class="ms-5 main-text">
                            <input type="radio" name="membership" value="individual"> 일반회원
                        </label>
                    </div>
                    <div class="mb-3">
                        <label for="username" class="form-label main-text">아이디</label>
                        <input type="text" id="username" class="form-control sub-text" placeholder="link" name="username">
                        <button type="button" class="btn form-control btn-register main-text">중복체크</button>
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label main-text">비밀번호</label>
                        <input type="password" class="form-control sub-text" placeholder="**********" name="password" >
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label main-text">이메일</label>
                        <input type="email" class="form-control sub-text" placeholder="link@gmail.com" name="email">
                    </div>
                    <button id="btnJoin" type="submit" class="btn form-control btn-register main-text">회원가입</button>
                </form>
            </div>
        </div>
    </div>
</div>
{{> layout/footer}}