<script>
    // 기술버튼 누르면 기술리스트 표출
    function showSkills() {
        document.getElementById('skills-list').style.display = 'block';
        document.getElementById('areas-list').style.display = 'none';        
    }

    // 기술리스트의 기술들을 선택하면 스타일 변경
    function selectSkills(button) {
        let selectedButtons = document.querySelectorAll('.btn-category.main-text.btn-category-on');
        selectedButtons.forEach((btn) => {
            btn.classList.remove('btn-category-on');
            btn.classList.add('btn-category-off');
        });

        button.classList.remove('btn-category-off');
        button.classList.add('btn-category-on');
    }

    // 지역버튼 누르면 지역리스트 표출
    function showAreas() {
        document.getElementById('skills-list').style.display = 'none';
        document.getElementById('areas-list').style.display = 'block';        
    }

    // 지역리스트의 지역들을 선택하면 스타일 변경
    function selectAreas(button) {      
        let selectedButtons = document.querySelectorAll('.btn-category.main-text.btn-category-on');
        selectedButtons.forEach((btn) => {
            btn.classList.remove('btn-category-on');
            btn.classList.add('btn-category-off');
        });

        button.classList.remove('btn-category-off');
        button.classList.add('btn-category-on');
    }

    // 스킬과 지역 선택 시 공고리스트 변경하기
    function applyFilters() {

        // 선택된 스킬과 지역 가져오기
        let selectedSkills = document.querySelectorAll('.skill-button.btn-category-on');
        let selectedAreas = document.querySelectorAll('.area-button.btn-category-on');  

        if (selectedSkills.length > 0 && selectedAreas.length > 0) {
            // 선택된 스킬과 지역 값 설정
            selectedSkill = selectedSkills[0].textContent;
            selectedArea = selectedAreas[0].textContent;
            
            // 서버로 선택된 스킬과 지역 전송
            window.location.href = `/filtered-notices?selectedSkill=${selectedSkill}&selectedArea=${selectedArea}`;
        } else {
            console.log("선택안됨");
        }

        console.log(selectedSkill);
        console.log(selectedArea);
    }
    
    // 카드 마우스 오버 시 스타일 변경
    function highlightCard(element) {
        element.style.border = '2px solid #9F12E1';
        element.style.cursor = 'pointer';
    }

    function unhighlightCard(element) {
        element.style.border = '1px solid #ccc';
        element.style.cursor = 'pointer';
    }

    // 버튼 마우스 오버 시 스타일 변경
    function highlightButton(element) {
        element.style.cursor = 'pointer';
        element.style.boxShadow = '3px 3px 5px rgba(0, 0, 0, 0.2)';
    }

    function unhighlightButton(element) {
        element.style.cursor = 'pointer';
        element.style.boxShadow = 'none'; 
    }
</script>
